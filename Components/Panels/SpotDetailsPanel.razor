<button class="btn btn-sm btn-light text-muted mb-4 rounded-pill px-3 shadow-sm" @onclick="OnClose">
    ← Back to search
</button>

<div class="mb-4">
    <div class="d-flex align-items-center justify-content-between mb-2">
        <h2 class="fw-bold mb-0">@SpotId</h2>
        <span class="badge bg-success-subtle text-success rounded-pill px-3">Available</span>
    </div>
    <div class="d-flex align-items-center text-warning">
        <span>★★★★☆</span>
        <span class="text-muted small ms-2">(4.8 • 12 reviews)</span>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
    <!-- Имитация картинки -->
    <div class="bg-light d-flex align-items-center justify-content-center text-muted" style="height: 120px; background: repeating-linear-gradient(45deg, #f8f9fa, #f8f9fa 10px, #e9ecef 10px, #e9ecef 20px);">
        <span>Parking Photo Placeholder</span>
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col border-end">
                <div class="text-muted small text-uppercase fw-bold">Price</div>
                <div class="fs-5 fw-bold text-dark">$15<small class="text-muted fs-6">/hr</small></div>
            </div>
            <div class="col">
                <div class="text-muted small text-uppercase fw-bold">Distance</div>
                <div class="fs-5 fw-bold text-dark">0.5 <small class="text-muted fs-6">km</small></div>
            </div>
        </div>
    </div>
</div>

<h6 class="fw-bold mb-2">Description</h6>
<p class="text-muted small mb-4">
    Secure underground parking spot with 24/7 CCTV surveillance. Easy access from the main road. EV charging available.
</p>

<div class="mt-auto">
    <button class="btn btn-primary btn-lg w-100 rounded-4 py-3 shadow-sm fw-bold" @onclick="() => OnBook.InvokeAsync(SpotId)">
        Book This Spot
    </button>
</div>

@code {
    [Parameter] public string? SpotId { get; set; }
    [Parameter] public EventCallback<string> OnBook { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}