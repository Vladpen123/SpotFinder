@page "/my-spots"
@inject Geo.GeoClient GeoClient
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IJSRuntime JS
@rendermode InteractiveServer
<PageTitle>My Parking Spots</PageTitle>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h1>My Parking Spots</h1>
        <a href="/" class="btn btn-outline-secondary">← Back to Map</a>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2 text-muted">Loading your empire...</p>
    </div>
}
else if (spots == null || spots.Count == 0)
{
    <div class="card shadow-sm p-5 text-center">
        <div class="fs-1 mb-3">🕸️</div>
        <h3>You have no spots yet</h3>
        <p class="text-muted">Start earning money by renting out your parking space!</p>
        <div>
            <a href="/" class="btn btn-primary">Add New Spot on Map</a>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var spot in spots)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-header bg-white border-bottom-0 pt-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-light text-dark border">@spot.Id</span>
                            <span class="badge @Utils.GetStatusBadge(spot.Status)">@spot.Status</span>
                        </div>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">$@spot.PricePerHour <small class="text-muted">/ hr</small></h5>
                        <p class="card-text small text-muted">
                            Lat: @spot.Latitude.ToString("F4")<br />
                            Lon: @spot.Longitude.ToString("F4")
                        </p>
                    </div>

                    <div class="card-footer bg-white border-0 pb-4 px-4 pt-0">
                        @if (spot.Status == "Paid" || spot.Status == "Reserved")
                        {
                            <div class="alert alert-warning mb-0 py-2 small">
                                ⚠️ Cannot delete active spot
                            </div>
                        }
                        else
                        {
                            <button class="btn btn-outline-danger w-100 rounded-pill"
                                    @onclick="() => DeleteSpot(spot.Id)">
                                Delete Spot
                            </button>
                        }
                    </div>

                </div>
            </div>
        }
    </div>
}

@code {
    private bool isLoading = true;
    private List<SpotModel> spots = new();
    private string currentUserId = "";

    protected override async Task OnInitializedAsync()
    {
        var authService = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authService.User;

        if (user.Identity is { IsAuthenticated: true })
        {
            currentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value
                                     ?? user.Identity.Name ?? "";
            await LoadSpots();
        }
        else
            isLoading = false;

    }
    private async Task LoadSpots()
    {
        try
        {
            var response = await GeoClient.GetMySpotsAsync(new GetMySpotsRequest { OwnerId = currentUserId });
            spots = response.Spots.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
    private async Task DeleteSpot(string spotId)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delete spot {spotId}?");

        if (!confirmed) return;

        try
        {
            var response = await GeoClient.DeleteSpotAsync(new DeleteSpotRequest { SpotId = spotId, OwnerId = currentUserId });
            if (response.Success)
            {
                var spotToRemove = spots.FirstOrDefault(s => s.Id == spotId);
                if (spotToRemove != null)
                {
                    spots.Remove(spotToRemove);
                    StateHasChanged(); // Обновляем UI
                }
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"Failed: {response.Message}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting spot: {ex.Message}");
        }
    }
}