
<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold m-0">History</h4>
    <button class="btn btn-light btn-sm rounded-circle shadow-sm" style="width: 32px; height: 32px;" @onclick="OnClose">✕</button>
</div>

@if (Bookings == null || !Bookings.Any())
{
    <div class="text-center py-5">
        <div class="text-muted mb-3 fs-1">📭</div>
        <h6 class="fw-bold">No bookings yet</h6>
        <p class="text-muted small">Your parking history will appear here.</p>
    </div>
}
else
{
    <div class="list-group list-group-flush">
        @foreach (var item in Bookings)
        {
            <div class="list-group-item border-0 rounded-3 mb-2 p-3 bg-light shadow-sm d-flex align-items-center">
                <div class="bg-white rounded-circle p-2 me-3 text-secondary shadow-sm">
                    🚗
                </div>
                <div class="flex-grow-1">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold text-dark">@item.SpotId</span>
                        <span class="badge rounded-pill @Utils.GetStatusBadge(item.Status)">@item.Status</span>
                    </div>
                    <div class="d-flex justify-content-between mt-1">
                        <small class="text-muted">@item.CreatedAt.ToDateTime().ToLocalTime().ToString("MMM dd, HH:mm")</small>
                        <small class="fw-bold text-dark">$@item.Amount</small>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    [Parameter] public List<BookingModel>? Bookings { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }


}